<div class="container my-3">
  <h4 class="display-4 font-monospace fw-bold my-4">Log In</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, placeholder: "Email address", autofocus: true, autocomplete: "email" %>
    </div><br>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div><br>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div><br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
