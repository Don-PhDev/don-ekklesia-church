<div class="container my-3">
  <h4 class="display-4 text-center font-monospace fw-normal my-4">General Account Settings</h4>

  <div class="card">
    <div class="card-body">
      <h4 class="display-6 font-monospace fw-normal">Edit <%= resource_name.to_s.humanize %></h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-2">
          <%= f.label :email, class: "mb-2 fw-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label :name, class: "mb-2 fw-bold" %><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-2">
          <%= f.label :password, class: "mb-2 fw-bold" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field mb-2">
          <%= f.label :password_confirmation, class: "mb-2 fw-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label :current_password, class: "mb-2 fw-bold" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "Update", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h6 class="display-6 font-monospace fw-bold">Delete my account</h6>

      <p>When you delete your account, you won't be able to retrieve the content or information you've shared.</p>
      <%= button_to "Continue to account deletion",
        registration_path(resource_name),
        data: { confirm: "Are you sure?" },
        method: :delete,
        class: "mb-3"
      %>

      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
