<div class="post_content">
  <%= link_to post_path(post), class: "text-decoration-none text-dark" do %>
    <div id="<%= dom_id post %>">
      <p>
        <strong>Title:</strong>
        <%= post.title %>
      </p>

      <p>
        <small><%= post.posted_time_passed %></small>
      </p>

      <p><%= post.body %></p>
    </div>
  <% end %>
</div>
