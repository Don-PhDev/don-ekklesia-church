<div class="container my-3">
  <div class="d-flex justify-content-between align-items-center mt-3">
    <h1 class="display-5 font-monospace fw-bold mb-0">
      <%= @post.title %>
    </h1>

    <% if current_user&.admin? %>
      <div>
        <%= link_to "Edit", edit_post_path(@post),
          class: "btn btn-primary"
        %>
        <%= link_to "Delete", @post, data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }, class: "btn btn-danger"
        %>
      <% end %>
    </div>
  </div>
  <div class="container">
    <p class="mb-5">
      <span><span class="fw-light">â€”</span> <%= @post.user.username %></span>
      <small class="text-muted ms-2"><%= @post.updated_at.strftime("%B %d, %Y") %></small>
    </p>

    <div class="card shadow mb-3">
      <div class="card-body">
        <%= render @post %>
      </div>

      <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
