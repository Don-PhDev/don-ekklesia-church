<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-3">
    <h1 class="d-inline-block display-5 font-monospace mb-3 fw-bold"><%= @post.title %></h1>
    <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary" if current_user&.admin? %>
  </div>

  <%= render @post %>

  <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
</div>
