<div id="pager" class="my-4 d-flex justify-content-between">
  <div>
    <% if @pagy.prev %>
      <%= link_to(
        "< Previous page",
        posts_path(page: @pagy.prev),
        class: "btn btn-outline-dark my-3",
        data: {
          turbo_action: "advance"
        }
      ) %>
    <% end %>
  </div>
  <div class="text-right">
    <% if @pagy.next %>
      <%= link_to(
        "Next page >",
        posts_path(page: @pagy.next),
        class: "btn btn-outline-dark my-3",
        data: {
          turbo_action: "advance"
        }
      ) %>
    <% end %>
  </div>
</div>
